doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title User Panel
    body
        //- -------------- Navbar -------------- 
        nav.navbar.navbar-expand-lg.navbar-light(style='background-color: #F0D9FF;')
            .container-fluid
                a.navbar-brand(style='color: #9760ca; padding-left: 20px;') Project
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.me-auto.mb-2.mb-lg-0
                        li.nav-item
                            a.nav-link.active(href='/') User Panel
                        li.nav-item
                            a.nav-link.active(href='/dashboard') Admin Dashboard
                        li.nav-item
                            a.nav-link.active(href='/result') Result

        //- -------------- End Navbar -------------- 

        h1 Submit your response here:

        form(action="#", method="post") 
            label(for="uname") Enter Your Name: 
            input(type="text", name="uname", id="uname")

            each question in questions
                h5= question.question
                if question.aCategory == 2
                    input(type="radio", name=question.questionCode+"ans", id=question.questionCode+"ans-1", value=question.answer1_Point)
                    label(for=question.questionCode+"ans-1")= question.answer1
                    br  
                    input(type="radio", name=question.questionCode+"ans", id=question.questionCode+"ans-2", value=question.answer2_Point)
                    label(for=question.questionCode+"ans-2")= question.answer2
                else
                    input(type="radio", name=question.questionCode+"ans", id=question.questionCode+"ans-1", value=question.answer1_Point)
                    label(for=question.questionCode+"ans-1")= question.answer1
                    br  
                    input(type="radio", name=question.questionCode+"ans", id=question.questionCode+"ans-2", value=question.answer2_Point)
                    label(for=question.questionCode+"ans-2")= question.answer2
                    br
                    input(type="radio", name=question.questionCode+"ans", id=question.questionCode+"ans-3", value=question.answer3_Point)
                    label(for=question.questionCode+"ans-3")= question.answer3
                    br  
                    input(type="radio", name=question.questionCode+"ans", id=question.questionCode+"ans-4", value=question.answer4_Point)
                    label(for=question.questionCode+"ans-4")= question.answer4
            br
            button(type="submit") Submit